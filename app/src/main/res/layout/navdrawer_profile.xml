<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/nav_drawer_margin"
    android:paddingLeft="@dimen/nav_drawer_margin"
    android:paddingEnd="@dimen/nav_drawer_margin"
    android:paddingRight="@dimen/nav_drawer_margin"
    android:layout_marginTop="@dimen/nav_drawer_item_margin"
    android:layout_marginBottom="@dimen/nav_drawer_item_margin"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="@dimen/nav_drawer_profile_select_image_size"
        android:layout_height="@dimen/nav_drawer_profile_select_image_size"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"/>
</LinearLayout>