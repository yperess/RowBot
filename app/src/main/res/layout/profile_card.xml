<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    style="@style/RowBot.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <LinearLayout
            android:id="@+id/profile_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/profile_pic"
                android:layout_width="@dimen/profile_card_image_size"
                android:layout_height="@dimen/profile_card_image_size"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_name"
                    style="@style/RowBot.CardSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/profile_default_user_name"/>

                <TextView
                    android:id="@+id/team_name"
                    style="@style/RowBot.CardSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/profile_default_team_name"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Display season meters -->
        <TextView
            android:id="@+id/season_meters"
            style="@style/RowBot.ProfileCard.InfoLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Display lifetime meters -->
        <TextView
            android:id="@+id/lifetime_meters"
            style="@style/RowBot.ProfileCard.InfoLine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</android.support.v7.widget.CardView>