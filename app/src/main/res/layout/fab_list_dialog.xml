<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/overlay_dialog_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="right">

        <org.uvdev.rowbot.ui.widgets.FabActionView
            android:id="@+id/fab5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_small_size_bottom_margin"
            app:fullSize="false"/>

        <org.uvdev.rowbot.ui.widgets.FabActionView
            android:id="@+id/fab4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_small_size_bottom_margin"
            app:fullSize="false"/>

        <org.uvdev.rowbot.ui.widgets.FabActionView
            android:id="@+id/fab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_small_size_bottom_margin"
            app:fullSize="false"/>

        <org.uvdev.rowbot.ui.widgets.FabActionView
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_small_size_bottom_margin"
            app:fullSize="false"/>

        <org.uvdev.rowbot.ui.widgets.FabActionView
            android:id="@+id/fab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_small_size_bottom_margin"
            app:fullSize="false"/>

        <org.uvdev.rowbot.ui.widgets.FabActionView
            android:id="@+id/fab0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_full_size_margin"/>

    </LinearLayout>

</RelativeLayout>
