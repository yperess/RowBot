<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:editTextColor">@android:color/background_dark</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="colorControlNormal">@color/control_normal</item>
        <item name="colorControlActivated">@color/control_activated</item>
        <item name="colorControlHighlight">@color/control_highlighted</item>
        <item name="drawerArrowStyle">@style/RowBot.DrawerArrowStyle</item>
        <item name="android:buttonStyle">@style/RowBot.ButtonStyle</item>
        <item name="switchStyle">@style/RowBot.SwitchStyle</item>
        <item name="alertDialogTheme">@style/RowBot.AlertDialogTheme</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="RowBot"/>

    <style name="RowBot.ActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/primary</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="color">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="drawerArrowStyle">@style/RowBot.DrawerArrowStyle</item>
    </style>

    <style name="RowBot.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/primary</item>
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="RowBot.ButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/ripple</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="RowBot.SwitchStyle" parent="Base.Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumb">@drawable/switch_thumb</item>
        <item name="android:track">@drawable/switch_bg</item>
        <item name="track">@drawable/switch_bg</item>
        <item name="showText">true</item>
        <item name="switchTextAppearance">@style/RowBot.SwitchStyle.TextAppearance</item>
    </style>

    <style name="RowBot.SwitchStyle.TextAppearance" parent="Base.TextAppearance.AppCompat.Widget.Switch">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RowBot.Card">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="RowBot.Value">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="RowBot.CardTitle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RowBot.CardSubTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="RowBot.ProfileCard"/>

    <style name="RowBot.ProfileCard.InfoLine">
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="RowBot.ProfileDialog"/>

    <style name="RowBot.ProfileDialog.Image">
        <item name="android:layout_margin">@dimen/profile_edit_image_margin</item>
        <item name="android:padding">@dimen/profile_edit_image_grow_size</item>
        <item name="android:alpha">0.6</item>
    </style>

    <style name="RowBot.FAB">
        <item name="android:layout_width">@dimen/fab_full_size</item>
        <item name="android:layout_height">@dimen/fab_full_size</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginBottom">@dimen/fab_full_size_margin</item>
        <item name="android:layout_marginRight">@dimen/fab_full_size_margin</item>
    </style>

    <style name="RowBot.GitHub"/>

    <style name="RowBot.GitHub.IssueTitle">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
